<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.devops.krakenlabs.lanix.ventas.VentasSecondStepFragment">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo_lanix"/>

        <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
            android:id="@+id/searchableProducto"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            app:BoarderColor="@color/colorPrimary"
            app:DoneSearchTintColor="@color/colorPrimaryDark"
            app:RevealEmptyText="Selecciona el Producto"
            app:RevealViewBackgroundColor="@color/colorPrimaryDark"
            app:SearchViewBackgroundColor="@color/colorPrimaryDark"
            app:ShowBorders="true"
            app:SpinnerExpandHeight="200dp"
            app:StartSearchTintColor="@color/colorPrimary" />

        <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
            android:background="@drawable/border"
            android:id="@+id/searchableCadenaComercial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:StartSearchTintColor="@color/colorPrimary"
            app:DoneSearchTintColor="@color/colorPrimaryDark"
            app:RevealViewBackgroundColor="@color/colorPrimaryDark"
            app:SearchViewBackgroundColor="@color/colorPrimaryDark"
            app:BoarderColor="@color/colorPrimary"
            app:ShowBorders="true"
            app:AnimDuration="200"
            app:RevealEmptyText="Selecciona el catÃ¡logo"
            app:SpinnerExpandHeight="200dp"/>

        <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
            android:background="@drawable/border"
            android:id="@+id/searchableModelo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:StartSearchTintColor="@color/colorPrimary"
            app:DoneSearchTintColor="@color/colorPrimaryDark"
            app:RevealViewBackgroundColor="@color/colorPrimaryDark"
            app:SearchViewBackgroundColor="@color/colorPrimaryDark"
            app:BoarderColor="@color/colorPrimary"
            app:ShowBorders="true"
            app:AnimDuration="200"
            app:RevealEmptyText="Selecciona el Modelo"
            app:SpinnerExpandHeight="100dp"/>
        <LinearLayout
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/et_imei"
                    android:inputType="numberDecimal"
                    android:hint="IMEI"
                    android:imeOptions="actionNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tv_camera"
                android:clickable="true"
                android:src="@drawable/ic_camera_black_48dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_lccid"
                android:inputType="numberDecimal"
                android:hint="LCCID"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_guardar_venta"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="Agregar otro telefono a venta"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>