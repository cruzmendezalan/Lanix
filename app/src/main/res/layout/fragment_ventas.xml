<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.devops.krakenlabs.lanix.ventas.VentasSecondStepFragment">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo_lanix"/>

        <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
            android:id="@+id/searchableSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:StartSearchTintColor="@color/colorPrimary"
            app:DoneSearchTintColor="@color/colorPrimaryDark"
            app:RevealViewBackgroundColor="@color/white"
            app:SearchViewBackgroundColor="@color/white"
            app:BoarderColor="@color/colorPrimary"
            app:ShowBorders="true"
            app:RevealEmptyText="Selecciona el modelo"

            app:SpinnerExpandHeight="300dp"/>

        <gr.escsoft.michaelprimez.searchablespinner.SearchableSpinner
            android:id="@+id/searchableCatalog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_horizontal"
            app:StartSearchTintColor="@color/colorPrimary"
            app:DoneSearchTintColor="@color/colorPrimaryDark"
            app:RevealViewBackgroundColor="@color/white"
            app:SearchViewBackgroundColor="@color/white"
            app:BoarderColor="@color/colorPrimary"
            app:ShowBorders="true"
            app:RevealEmptyText="Selecciona el catalogo"
            app:SpinnerExpandHeight="300dp"/>

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<EditText-->
                <!--android:id="@+id/et_fecha"-->
                <!--android:inputType="date"-->
                <!--android:hint="Fecha"-->
                <!--android:focusable="false"-->
                <!--android:clickable="true"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:singleLine="true"/>-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_imei"
                android:inputType="numberDecimal"
                android:hint="IMEI"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_lccid"
                android:inputType="numberDecimal"
                android:hint="LCCID"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/btn_guardar_venta"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:text="Agregar otro telefono a venta"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>