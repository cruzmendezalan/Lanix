<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <FrameLayout
        android:id="@+id/fl_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
    <LinearLayout
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/ll_asistencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:visibility="gone"
            android:id="@+id/layout_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/l_header"/>

        <TextView
            android:background="@color/white"
            android:id="@+id/tv_instrucciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/layout_description"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:text="@string/msg_registro"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_instrucciones"
            android:background="@color/white"
            android:weightSum="5">
            <Button
                android:id="@+id/cv_entrada"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:text="@string/msg_hra_entrada"
                android:drawableRight="@drawable/chevron_right"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/cv_salida_comer"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:text="@string/salida_a_comer"
                android:drawableRight="@drawable/chevron_right"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/cv_regreso_comer"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:text="@string/msg_regreso_comida"
                android:drawableRight="@drawable/chevron_right"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/cv_salida"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/white"
                android:text="@string/hora_de_salida"
                android:drawableRight="@drawable/chevron_right"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".HomeActivity" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
